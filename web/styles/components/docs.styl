.docs
  .intro
    max-width 840px
    width 100%
    text-align center
    margin 0 auto
    padding 0 20px

    h1
      padding: 0
      margin: 0 0 40px
      font-size: 30px
      font-weight: 400
      line-height: 1
      color: blue
      +breakpoint("tablet")
        margin-bottom: 20px
        font-size: 50px
        
    p
      margin: 0
      padding: 0
      color: rgba(255,255,255,.8)
      line-height 1.8
      font-size: 18px;
    
  section
    div
      vertical-align: top

    p
      display: inline-block
      width: 60%
      margin: 0 30px 0 0
      vertical-align: top
  
    ul
      display: inline-block
      width: 35%
      list-style: square
      margin 0
      padding 0
    
